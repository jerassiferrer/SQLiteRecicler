<?xml version="1.0" encoding="utf-8"?>



<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/curso_imagen"
            android:layout_width="117dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/images_item"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_curso_id"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/curso_imagen"
                android:layout_weight="1"
                android:text="ID:"
                android:textAppearance="?android:attr/textAppearanceSmall" />
            <TextView
                android:id="@+id/tv_curso_nombre"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_alignBottom="@+id/curso_information"
                android:layout_alignTop="@+id/curso_information"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/curso_imagen"
                android:layout_toRightOf="@+id/curso_imagen"
                android:layout_weight="1"
                android:text="Nombre"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_curso_descripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/curso_information"
                android:layout_alignTop="@+id/curso_information"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/curso_imagen"
                android:layout_toRightOf="@+id/curso_imagen"
                android:layout_weight="1"
                android:text="Descripcion"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_curso_precio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/curso_information"
                android:layout_alignTop="@+id/curso_information"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/curso_imagen"
                android:layout_toRightOf="@+id/curso_imagen"
                android:layout_weight="1"
                android:text="Precio"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold" />

            <View
                android:id="@+id/linea3"
                android:layout_width="246dp"
                android:layout_height="1dp"
                android:layout_above="@+id/compartir"
                android:layout_toRightOf="@+id/curso_imagen"
                android:background="#ffd5d5d5">

            </View>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>